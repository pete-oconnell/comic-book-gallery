@{
    Layout = null;

    string seriesTitle = "The Amazing Spider-Man";
    int issueNumber = 700;
    string description = "this <strong>is</strong> the description";
    string[] artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: blah",
        "Colours: bing bong",
        "Letters: jabberwocky"      
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>
        <h5>Description:</h5>
        <div>@Html.Raw(@description)</div>
        @if (@artists.Length > 0) {
        <h5>Artists</h5>
        <div>
            <ul>
            @foreach (string artist in @artists) 
             { 
                <text><li>@artist</li></text>
             }
            </ul>
        </div> 
        }
    </div>
</body>
</html>
